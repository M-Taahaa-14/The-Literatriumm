# Analytics Microservice Environment Variables
# Copy this file to .env and update values for your environment

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/library_analytics
DEV_DATABASE_URL=postgresql://postgres:password@localhost:5432/library_analytics_dev

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Analytics Settings
ANALYTICS_CACHE_TIMEOUT=300
MAX_RECORDS_PER_QUERY=1000

# Django API Integration (for data sync)
DJANGO_API_BASE_URL=http://localhost:8000/api
DJANGO_API_TOKEN=your-django-api-token

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0
